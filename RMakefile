SOURCE += source/main.cpp
LIBS += $(RSGL-static)
GXX = g++
OUTPUT = RSGL-2048

installFont{
    bash{
		 sudo cp res/fonts/SansPosterBold.ttf /usr/share/fonts/TTF
	}
}

install{
    pash{
		  sudo mv RSGL-2048 /usr/bin
		  cp res/2048.desktop ~/Desktop/
		  cp res/2048.desktop ~/.local/share/applications/RSGL2048.desktop
	}
}
